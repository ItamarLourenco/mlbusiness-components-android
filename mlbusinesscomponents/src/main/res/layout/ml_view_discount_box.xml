<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ui_view_discount_box_width"
    android:layout_height="@dimen/ui_view_discount_box_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="@dimen/ui_025m"
        app:cardBackgroundColor="@color/ui_transparent"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iconImage"
            android:layout_width="@dimen/ui_7m"
            android:layout_height="@dimen/ui_7m"
            android:scaleType="centerInside"
            android:contentDescription="@string/app_name" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/titleLabel"
        style="@style/MLFont.Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:textColor="@color/ui_fullscreenmodal_toolbar_text_color"
        android:textSize="@dimen/ui_fontsize_xxsmall" />

    <TextView
        android:id="@+id/subtitleLabel"
        style="@style/MLFont.Bold.Semi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ui_fullscreenmodal_toolbar_text_color"
        android:textSize="@dimen/ui_fontsize_large"
        android:lineSpacingExtra="4sp" />
</LinearLayout>