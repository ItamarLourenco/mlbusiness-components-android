<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:id="@+id/touchpoint_hybrid_carousel_cover_card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/touchpoint_hybrid_carousel_cover_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cross_selling_action_color"
            app:viewAspectRatio="3.2"/>

        <com.mercadolibre.android.mlbusinesscomponents.components.row.TouchpointRowView
            android:id="@+id/touchpoint_hybrid_carousel_cover_card_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</merge>